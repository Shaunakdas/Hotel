= form_for @subject do |f|
  .field
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .field
    = f.label :full_name
    = f.text_field :full_name, class: 'form-control'
  .field
    = f.label :code
    = f.text_field :code, class: 'form-control'
  .field
    = f.label :description
    = f.text_area :description, class: 'form-control'
  .field
    = f.label :standard
    = f.select :standard_id, Standard.all.collect { |p| [ p.name, p.id ] }, include_blank: true
  = f.submit 'Save'